<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Toolbar
            android:layout_width="104dp"
            android:layout_height="68dp" />

        <TextView
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="fill"
            android:text="[구성 멤버] 모임 이름"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="정보" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="게시판" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="구성 맴버" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />



    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:text="닉네임/주로하는 시간대/평점 "
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점 남기기" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/공지사항"
            android:layout_width="82dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info" />

        <ImageButton
            android:id="@+id/친구 목록"
            android:layout_width="82dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info" />

        <ImageButton
            android:id="@+id/채팅"
            android:layout_width="82dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info" />

        <ImageButton
            android:id="@+id/내정보"
            android:layout_width="82dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info" />
    </LinearLayout>


</LinearLayout>